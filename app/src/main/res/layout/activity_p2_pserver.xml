<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.atack08.groupload_app.P2PServer"
    android:background="@drawable/degradado">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button android:id="@+id/botonIniciar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RECIBIR FICHERO"
            android:layout_gravity="center_horizontal"
            android:onClick="iniciarServidor"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="GROUPLOAD"
            android:textColor="@color/azulGoogle"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:background="@drawable/borde_linea_blanca"/>

    </LinearLayout>


</LinearLayout>
