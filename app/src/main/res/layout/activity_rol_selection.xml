<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.atack08.groupload_app.RolSelection"
    android:orientation="vertical"
    android:background="@color/azulGoogle">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREAR GRUPO"
            android:onClick="formularioCreacionGrupo"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UNIRSE A GRUPO"
            android:onClick="formularioUnionGrupo"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="5dp">

        <LinearLayout android:id="@+id/formularioCreacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:hint="Usuario"
                android:fontFamily="serif"
                android:inputType="textAutoComplete"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:fontFamily="serif"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:hint="Crear Nombre Grupo"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:hint="Crear Contraseña Grupo"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:hint="Confirmar Contraseña Grupo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Compartiras un % de descarga de:"
                    android:fontFamily="serif"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <Spinner android:id="@+id/spinnerPorcentajeDescarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </Spinner>

            </LinearLayout>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="CREAR"
                android:layout_marginTop="20dp"/>

        </LinearLayout>


        <LinearLayout android:id="@+id/formularioUnion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">

        </LinearLayout>



    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="GROUPLOAD"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:background="@drawable/borde_linea_blanca"/>

    </LinearLayout>


</LinearLayout>
